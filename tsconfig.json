{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "types": ["node", "mocha"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "include": ["./tests", "./scripts"],
  "exclude": ["node_modules"]
}
          